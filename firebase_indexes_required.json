[
  {
    "collection": "users",
    "fields": [
      {
        "field": "stats.total_points",
        "order": "desc"
      },
      {
        "field": "profile.class_id",
        "order": "asc"
      }
    ],
    "description": "For class leaderboard queries"
  },
  {
    "collection": "leaderboard/{board_type}/{date}",
    "fields": [
      {
        "field": "rank",
        "order": "asc"
      }
    ],
    "description": "For leaderboard ranking queries"
  },
  {
    "collection": "notifications/{userId}",
    "fields": [
      {
        "field": "pending.created_at",
        "order": "desc"
      },
      {
        "field": "pending.read",
        "order": "asc"
      }
    ],
    "description": "For notification queries"
  },
  {
    "collection": "real_time_activity",
    "fields": [
      {
        "field": "live_feed.timestamp",
        "order": "desc"
      }
    ],
    "description": "For activity feed queries"
  }
]