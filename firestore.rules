rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin function to check if user is an authorized admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email in [
        'morais.irving@isd622.org',
        'marco.morais@imaginenorthport.com'
      ];
    }
    
    // Rules for userProgress collection
    match /userProgress/{userId} {
      // Allow read and write only for authenticated users accessing their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow admin to delete for cleanup
      allow delete: if isAdmin();
    }
    
    // Rules for leaderboard collection
    match /leaderboard/{userId} {
      // Allow authenticated users to read all leaderboard entries
      allow read: if request.auth != null;
      // Allow authenticated users to write only their own leaderboard entry
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow admin to delete for cleanup
      allow delete: if isAdmin();
    }
    
    // Rules for student_progress collection (loops lesson)
    match /student_progress/{progressId} {
      // Allow read and write for anyone (anonymous users for learning progress)
      allow read, write: if true;
      // Allow admin to delete for cleanup
      allow delete: if isAdmin();
    }
    
    // Rules for submissions collection (student project submissions)
    match /submissions/{submissionId} {
      // Allow anyone to create submissions (students submitting projects)
      allow create: if true;
      // Allow anyone to read submissions (for teacher dashboard)
      allow read: if true;
      // Allow admin to delete for cleanup
      allow delete: if isAdmin();
    }
    
    // Rules for quizResults collection (DEF Quiz results)
    match /quizResults/{resultId} {
      // Allow authenticated users to create their own quiz results
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Allow authenticated users to read all quiz results (for teacher dashboard)
      allow read: if request.auth != null;
      // Allow admin to delete for cleanup
      allow delete: if isAdmin();
    }
    
    // Rules for quizProgress collection (DEF Quiz progress tracking)
    match /quizProgress/{userId} {
      // Allow authenticated users to read all progress (for teacher dashboard)
      allow read: if request.auth != null;
      // Allow authenticated users to write only their own progress
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow admin to delete for cleanup
      allow delete: if isAdmin();
    }
    
    // Rules for liveLeaderboard collection (Real-time leaderboard)
    match /liveLeaderboard/{userId} {
      // Allow authenticated users to read all live leaderboard entries
      allow read: if request.auth != null;
      // Allow authenticated users to write only their own leaderboard entry
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow admin to delete for cleanup
      allow delete: if isAdmin();
    }
    
    // Rules for securityViolations collection
    match /securityViolations/{violationId} {
      // Allow authenticated users to create security violation logs
      allow create: if request.auth != null;
      // Allow authenticated users to read security violations (for teacher dashboard)
      allow read: if request.auth != null;
      // Allow admin to delete for cleanup
      allow delete: if isAdmin();
    }
    
    // Rules for wordle_progress collection (Character Wordle game progress)
    match /wordle_progress/{userId} {
      // Allow authenticated users to read all progress (for teacher dashboard)
      allow read: if request.auth != null;
      // Allow authenticated users to write only their own progress
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow admin to delete for cleanup
      allow delete: if isAdmin();
    }
    
    // Rules for wordle_leaderboard collection (Character Wordle leaderboard)
    match /wordle_leaderboard/{entryId} {
      // Allow authenticated users to read all leaderboard entries
      allow read: if request.auth != null;
      // Allow authenticated users to create leaderboard entries
      allow create: if request.auth != null;
      // Allow admin to delete for cleanup
      allow delete: if isAdmin();
    }
    
    // Rules for pythonGamesLeaderboard collection (Python Exam Games leaderboard)
    match /pythonGamesLeaderboard/{entryId} {
      // Allow authenticated users to read all leaderboard entries
      allow read: if request.auth != null;
      // Allow authenticated users to create and update their own leaderboard entries
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow admin to delete for cleanup
      allow delete: if isAdmin();
    }
    
    // Rules for any other collections (future use)
    match /{document=**} {
      // Allow admin full access to any collection for management
      allow read, write, delete: if isAdmin();
      // Deny all other access by default for security
      allow read, write: if false;
    }
  }
}
