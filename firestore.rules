rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for userProgress collection
    match /userProgress/{userId} {
      // Allow read and write only for authenticated users accessing their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rules for leaderboard collection
    match /leaderboard/{userId} {
      // Allow authenticated users to read all leaderboard entries
      allow read: if request.auth != null;
      // Allow authenticated users to write only their own leaderboard entry
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rules for any other collections (future use)
    match /{document=**} {
      // Deny all access by default for security
      allow read, write: if false;
    }
  }
}
